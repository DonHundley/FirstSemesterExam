      <Label layoutX="14.0" layoutY="62.0" text="Rating:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Button fx:id="myRatingSaveButton" layoutX="123.0" layoutY="108.0" mnemonicParsing="false" onAction="#saveMyRatingWindow" text="Save" />
      <Button fx:id="myRatingCancelButton" layoutX="178.0" layoutY="108.0" mnemonicParsing="false" onAction="#closeMyRatingWindow" text="Cancel" />
